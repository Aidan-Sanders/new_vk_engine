#version 460

layout (local_size_x = 1) in;

layout (set = 0, binding = 0, rgba16) uniform readonly image2D inputf;
layout (set = 0, binding = 1, rgba16) uniform writeonly image2D outputf;

// layout (set = 0, binding = 2, readonly) {
//     vec3 inputf;
//     vec3 outputf;
// } extent;

void main()
{
    vec4 color = imageLoad(inputf, ivec2(gl_GlobalInvocationID.xy));
    imageStore(outputf, ivec2(gl_GlobalInvocationID.xy), color);
}